{
  "compilerOptions": {
    "outDir": "./out-tsc",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ES5"
    ],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "atmention-core": ["packages/atmention-core/src/index.js"],
      "atmention-angular": ["packages/atmention-angular/src/index.ts"],
      "atmention-angularjs": ["packages/atmention-angularjs/src/index.js"],
    }
  }
}
